  "visualizationScript": {
    "python": "# Generate radar chart from this JSON\nimport matplotlib.pyplot as plt\nimport numpy as np\nimport json\n\n# Load data\nwith open('maturity-model.json', 'r') as f:\n    data = json.load(f)\n\n# Radar chart\nlabels = data['radarChartData']['labels']\ncurrent = data['radarChartData']['currentState']\ntarget = data['radarChartData']['targetState']\n\nangles = np.linspace(0, 2*np.pi, len(labels), endpoint=False).tolist()\ncurrent += current[:1]\ntarget += target[:1]\nangles += angles[:1]\n\nfig, ax = plt.subplots(figsize=(8, 8), subplot_kw=dict(polar=True))\nax.plot(angles, current, 'o-', linewidth=2, label='Current State')\nax.fill(angles, current, alpha=0.25)\nax.plot(angles, target, 'o-', linewidth=2, label='Target State')\nax.set_xticks(angles[:-1])\nax.set_xticklabels(labels)\nax.set_ylim(0, 5)\nax.legend(loc='upper right')\nplt.title('Architecture Maturity Assessment')\nplt.savefig('maturity-radar.png', dpi=150, bbox_inches='tight')\nplt.show()"
  }
